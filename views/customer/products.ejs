<%- include('../partials/header', { title: 'Products' }) %>

<div class="container my-5">
    <h1 class="mb-4">Our Products</h1>
    
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Filter by Category</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/products" class="list-group-item list-group-item-action <%= !selectedCategory ? 'active' : '' %>">All Categories</a>
                        <a href="/products?category=Mango Trees" class="list-group-item list-group-item-action <%= selectedCategory === 'Mango Trees' ? 'active' : '' %>">Mango Trees</a>
                        <a href="/products?category=Fruit Trees" class="list-group-item list-group-item-action <%= selectedCategory === 'Fruit Trees' ? 'active' : '' %>">Fruit Trees</a>
                        <a href="/products?category=Flowering Plants" class="list-group-item list-group-item-action <%= selectedCategory === 'Flowering Plants' ? 'active' : '' %>">Flowering Plants</a>
                        <a href="/products?category=Indoor Plants" class="list-group-item list-group-item-action <%= selectedCategory === 'Indoor Plants' ? 'active' : '' %>">Indoor Plants</a>
                        <a href="/products?category=Outdoor Plants" class="list-group-item list-group-item-action <%= selectedCategory === 'Outdoor Plants' ? 'active' : '' %>">Outdoor Plants</a>
                        <a href="/products?category=Herbs" class="list-group-item list-group-item-action <%= selectedCategory === 'Herbs' ? 'active' : '' %>">Herbs</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="row">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm product-card">
                            <% if (product.images && product.images.length > 0) { %>
                            <img src="<%= product.images[0] %>" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
                            <% } else { %>
                            <img src="https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?w=400&h=250&fit=crop" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <div class="mb-2">
                                    <span class="badge bg-success"><%= product.category %></span>
                                    <% if (product.featured) { %>
                                    <span class="badge bg-warning text-dark">Featured</span>
                                    <% } %>
                                </div>
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text flex-grow-1"><%= product.description.substring(0, 100) %>...</p>
                                <% if (product.variants && product.variants.length > 0) { %>
                                <p class="text-success fw-bold mb-2">From NPR <%= Math.min(...product.variants.map(v => v.price)).toLocaleString() %></p>
                                <% } %>
                                <a href="/product/<%= product._id %>" class="btn btn-success w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle"></i> No products found in this category.
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
