<%- include('../partials/header', { title: 'Checkout' }) %>

<div class="container my-5">
    <h1 class="mb-4">Checkout</h1>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <% if (typeof user !== 'undefined' && user) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle"></i> Your information has been auto-filled. Please verify and update if needed.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                    <form id="checkout-form" action="/payment/initiate" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Full Name *</label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       value="<%= typeof user !== 'undefined' && user ? user.name : '' %>" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       value="<%= typeof user !== 'undefined' && user ? user.email : '' %>" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone Number *</label>
                                <input type="tel" class="form-control" id="phone" name="phone" 
                                       value="<%= typeof user !== 'undefined' && user && user.phone ? user.phone : '' %>" required>
                            </div>
                        </div>
                        
                        <h5 class="mt-4 mb-3">
                            Delivery Address
                            <button type="button" class="btn btn-sm btn-outline-primary ms-2" id="useLocationBtn">
                                <i class="bi bi-geo-alt-fill"></i> Use Current Location
                            </button>
                        </h5>
                        
                        <div id="locationLoading" class="alert alert-info d-none">
                            <i class="bi bi-hourglass-split"></i> Getting your location...
                        </div>
                        
                        <div class="mb-3">
                            <label for="street" class="form-label">Street Address *</label>
                            <input type="text" class="form-control" id="street" name="street" 
                                   value="<%= typeof user !== 'undefined' && user && user.address && user.address.street ? user.address.street : '' %>" required>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="city" class="form-label">City *</label>
                                <input type="text" class="form-control" id="city" name="city" 
                                       value="<%= typeof user !== 'undefined' && user && user.address && user.address.city ? user.address.city : '' %>" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state" class="form-label">State/Province *</label>
                                <input type="text" class="form-control" id="state" name="state" 
                                       value="<%= typeof user !== 'undefined' && user && user.address && user.address.state ? user.address.state : '' %>" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="zipCode" class="form-label">Zip Code</label>
                                <input type="text" class="form-control" id="zipCode" name="zipCode" 
                                       value="<%= typeof user !== 'undefined' && user && user.address && user.address.zipCode ? user.address.zipCode : '' %>">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="notes" class="form-label">Order Notes (Optional)</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Any special instructions for delivery"></textarea>
                        </div>
                        
                        <input type="hidden" name="items" id="cart-items-data">
                        <input type="hidden" name="totalAmount" id="total-amount-data">
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div id="order-items-summary"></div>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span id="order-subtotal">NPR 0</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Delivery Fee:</span>
                        <span>NPR 100</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total Amount:</strong>
                        <strong id="order-total" class="text-success">NPR 100</strong>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body text-center">
                    <img src="https://esewa.com.np/common/images/esewa_logo.png" alt="eSewa" style="max-width: 150px;" class="mb-3">
                    <p class="mb-3">Pay securely with eSewa</p>
                    <button type="submit" form="checkout-form" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-lock-fill"></i> Pay with eSewa
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    loadOrderSummary();
    autoFillUserData();
    
    // Location button handler
    document.getElementById('useLocationBtn').addEventListener('click', getCurrentLocation);
    
    const form = document.getElementById('checkout-form');
    form.addEventListener('submit', function(e) {
        const cart = getCart();
        if (cart.length === 0) {
            e.preventDefault();
            alert('Your cart is empty!');
            window.location.href = '/products';
            return;
        }
        
        // Save user data to localStorage for future checkouts
        const userData = {
            name: document.getElementById('name').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('phone').value,
            street: document.getElementById('street').value,
            city: document.getElementById('city').value,
            state: document.getElementById('state').value,
            zipCode: document.getElementById('zipCode').value
        };
        localStorage.setItem('userCheckoutData', JSON.stringify(userData));
    });
});

// Auto-fill user data from session/localStorage if available
function autoFillUserData() {
    // Try to get user data from localStorage (saved from profile or previous orders)
    const savedUserData = localStorage.getItem('userCheckoutData');
    if (savedUserData) {
        try {
            const userData = JSON.parse(savedUserData);
            if (userData.name) document.getElementById('name').value = userData.name;
            if (userData.email) document.getElementById('email').value = userData.email;
            if (userData.phone) document.getElementById('phone').value = userData.phone;
            if (userData.street) document.getElementById('street').value = userData.street;
            if (userData.city) document.getElementById('city').value = userData.city;
            if (userData.state) document.getElementById('state').value = userData.state;
            if (userData.zipCode) document.getElementById('zipCode').value = userData.zipCode;
        } catch (e) {
            console.error('Error parsing saved user data:', e);
        }
    }
}

// Get current location using Geolocation API
function getCurrentLocation() {
    const loadingDiv = document.getElementById('locationLoading');
    const btn = document.getElementById('useLocationBtn');
    
    if (!navigator.geolocation) {
        alert('Geolocation is not supported by your browser');
        return;
    }
    
    loadingDiv.classList.remove('d-none');
    btn.disabled = true;
    
    navigator.geolocation.getCurrentPosition(
        async function(position) {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;
            
            try {
                // Use OpenStreetMap Nominatim for reverse geocoding (free)
                const response = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lon}`);
                const data = await response.json();
                
                if (data && data.address) {
                    // Fill in address fields
                    const address = data.address;
                    
                    // Street/Road
                    const street = address.road || address.suburb || address.neighbourhood || '';
                    if (street) document.getElementById('street').value = street;
                    
                    // City
                    const city = address.city || address.town || address.village || address.municipality || '';
                    if (city) document.getElementById('city').value = city;
                    
                    // State/Province
                    const state = address.state || address.province || address.region || '';
                    if (state) document.getElementById('state').value = state;
                    
                    // Zip Code
                    const zipCode = address.postcode || '';
                    if (zipCode) document.getElementById('zipCode').value = zipCode;
                    
                    loadingDiv.classList.add('d-none');
                    loadingDiv.classList.remove('alert-info');
                    loadingDiv.classList.add('alert-success');
                    loadingDiv.innerHTML = '<i class="bi bi-check-circle"></i> Location detected successfully!';
                    loadingDiv.classList.remove('d-none');
                    
                    setTimeout(() => {
                        loadingDiv.classList.add('d-none');
                    }, 3000);
                }
            } catch (error) {
                console.error('Error getting address:', error);
                loadingDiv.classList.remove('alert-info');
                loadingDiv.classList.add('alert-warning');
                loadingDiv.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Could not get address. Please fill manually.';
                
                setTimeout(() => {
                    loadingDiv.classList.add('d-none');
                }, 3000);
            } finally {
                btn.disabled = false;
            }
        },
        function(error) {
            loadingDiv.classList.remove('alert-info');
            loadingDiv.classList.add('alert-danger');
            
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    loadingDiv.innerHTML = '<i class="bi bi-x-circle"></i> Location permission denied. Please enable location access.';
                    break;
                case error.POSITION_UNAVAILABLE:
                    loadingDiv.innerHTML = '<i class="bi bi-x-circle"></i> Location information unavailable.';
                    break;
                case error.TIMEOUT:
                    loadingDiv.innerHTML = '<i class="bi bi-x-circle"></i> Location request timed out.';
                    break;
                default:
                    loadingDiv.innerHTML = '<i class="bi bi-x-circle"></i> An error occurred while getting location.';
            }
            
            setTimeout(() => {
                loadingDiv.classList.add('d-none');
            }, 5000);
            
            btn.disabled = false;
        }
    );
}

function loadOrderSummary() {
    const cart = getCart();
    
    if (cart.length === 0) {
        window.location.href = '/cart';
        return;
    }
    
    let html = '';
    let subtotal = 0;
    
    cart.forEach(item => {
        const itemTotal = item.variant.price * item.quantity;
        subtotal += itemTotal;
        
        html += `
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <strong>${item.productName}</strong><br>
                    <small class="text-muted">${item.variant.size} Ã— ${item.quantity}</small>
                </div>
                <div>NPR ${itemTotal.toLocaleString()}</div>
            </div>
        `;
    });
    
    document.getElementById('order-items-summary').innerHTML = html;
    
    const deliveryFee = 100;
    const total = subtotal + deliveryFee;
    
    document.getElementById('order-subtotal').textContent = 'NPR ' + subtotal.toLocaleString();
    document.getElementById('order-total').textContent = 'NPR ' + total.toLocaleString();
    
    // Set hidden form fields
    document.getElementById('cart-items-data').value = JSON.stringify(cart);
    document.getElementById('total-amount-data').value = total;
}
</script>

<%- include('../partials/footer') %>
